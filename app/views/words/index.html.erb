<p><%= @sentence %></p>
<p><%= @simplified_array.join %></p>
<div>
  <table>
    <tr>
      <td>Simplified</td>
      <td>Pinyin</td>
      <td>Definition</td>
    </tr>
    <% @word_array.each do |word| %>
      <tr>
        <td><%= word.simplified %></td>
        <td><%= word.toned_pinyin %></td>
        <td><i><%= word.definitions %></i></td>
      </tr>
    <% end %>
  </table>
  <p><%= @word_array[-1].to_json %></p>
</div>
<p><%= @numeralized_array %></p>
<p><%= @def_tracking_array %></p>
